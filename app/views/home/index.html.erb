<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GitHub Info</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    #result {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>GitHub Info</h1>
  <label for="githubLogin">Enter GitHub Login:</label>
  <input type="text" id="githubLogin" required>
  <button onclick="fetchGitHubInfo()">Get Info</button>

  <div id="result"></div>

  <script>
    function fetchGitHubInfo() {
      const githubLogin = document.getElementById('githubLogin').value;

      fetch(`/graphql?query={
        user(login: "${githubLogin}") {
          githubLogin
          name
          repositories {
            name
          }
        }
      }`)
      .then(response => response.json())
      .then(data => displayGitHubInfo(data.data.user))
      .catch(error => console.error('Error fetching GitHub info:', error));
    }

    function displayGitHubInfo(user) {
      const resultDiv = document.getElementById('result');

      if (user) {
        resultDiv.innerHTML = `
          <p>GitHub Login: ${user.githubLogin}</p>
          <p>Name: ${user.name}</p>
          <p>Repositories:</p>
          <ul>
            ${user.repositories.map(repo => `<li>${repo.name}</li>`).join('')}
          </ul>
        `;
      } else {
        resultDiv.innerHTML = '<p>User not found</p>';
      }
    }
  </script>
</body>
</html>
